{
  "name": "monorepo-package-locator",
  "displayName": "Monorepo Package Locator",
  "description": "Quickly navigate to package sources in your monorepo",
  "version": "0.0.1",
  "publisher": "mavro",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Monorepo Package Locator",
      "properties": {
        "monorepoPackageLocator.namespace": {
          "type": "string",
          "default": "",
          "description": "The name of the folder containing your packages inside node_modules (e.g., @repo)."
        }
      }
    },
    "commands": [
      {
        "command": "monorepoPackageLocator.gotoPackage",
        "title": "Monorepo: Go to Package"
      },
      {
        "command": "monorepoPackageLocator.gotoPackageSource",
        "title": "Go to Package Source"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "monorepoPackageLocator.gotoPackageSource",
          "when": "explorerResourceIsFolder && resourcePath =~ /node_modules\\/.+/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "monorepoPackageLocator.gotoPackage",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ]
  }
}
